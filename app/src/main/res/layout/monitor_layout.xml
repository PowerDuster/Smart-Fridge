<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:layout_marginTop="-24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/line"
        android:translationY="-20dp"
        android:background="#666"
        android:rotation="-45"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

    <TextView
        android:id="@+id/temp_view"
        android:translationY="-20dp"
        android:layout_above="@id/line"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:ems="3"
        android:layout_marginBottom="36dp"
        android:layout_height="wrap_content"
        android:text="@string/default_temp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:src="@drawable/thermometer"
        android:layout_alignBaseline="@id/temp_view"
        android:translationY="-60dp"
        android:translationX="-6dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/humid_view"
        android:translationY="-20dp"
        android:layout_below="@id/line"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="36dp"
        android:layout_height="wrap_content"
        android:text="@string/default_humid"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:src="@drawable/humidity"
        android:layout_alignBaseline="@id/humid_view"
        android:layout_alignParentEnd="true"
        android:translationY="-60dp"
        android:translationX="6dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:id="@+id/state"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_marginEnd="-10dp"
            android:text="Lid: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/door_state_view"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000"
            android:textAlignment="center"
            android:text="@string/default_lid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
